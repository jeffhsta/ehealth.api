{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "date": {
            "type": "string",
            "pattern": "^(\\d{4}(?!\\d{2}\\b))((-)((0[1-9]|1[0-2])(\\3([12]\\d|0[1-9]|3[01]))|(00[1-9]|0[1-9]\\d|[12]\\d{2}|3([0-5]\\d|6[1-6]))))$"
        },
        "name": {
            "type": "string",
            "pattern": "^(?!.*[ЫЪЭЁыъэё@%&$^#])[a-zA-ZА-ЯҐЇІЄа-яґїіє0-9№\\\"!\\^\\*)\\]\\[(._-].*$"
        },
        "person_name": {
            "type": "string",
            "pattern": "^(?!.*[ЫЪЭЁыъэё@%&$^#])[А-ЯҐЇІЄа-яґїіє\\'\\- ]+$"
        },
        "address": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "description": "Dictionary: ADDRESS_TYPE"
                },
                "country": {
                    "type": "string"
                },
                "area": {
                    "$ref": "#/definitions/name"
                },
                "region": {
                    "$ref": "#/definitions/name"
                },
                "settlement": {
                    "$ref": "#/definitions/name"
                },
                "settlement_type": {
                    "type": "string",
                    "description": "settlement type Dictionary: SETTLEMENT_TYPE"
                },
                "settlement_id": {
                    "type": "string",
                    "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
                },
                "street_type": {
                    "type": "string",
                    "description": "street type Dictionary: STREET_TYPE"
                },
                "street": {
                    "$ref": "#/definitions/name"
                },
                "building": {
                    "type": "string",
                    "pattern": "^[1-9]([0-9]{1,3})?(([ \\-]{1})?(?![ЫЪЭЁыъэё])[А-ЯҐЇЄа-яґїє]{1})?((\\s)?(\\\\|/)(\\s)?[1-9]([0-9]{1,3})?(([ \\-]{1})?(?![ЫЪЭЁыъэё])[А-ЯҐЇЄа-яґїє]{1})?)?$"
                },
                "apartment": {
                    "type": "string"
                },
                "zip": {
                    "type": "string",
                    "pattern": "^[0-9]{5}$"
                }
            },
            "required": [
                "type",
                "country",
                "area",
                "settlement",
                "settlement_type",
                "settlement_id",
                "building"
            ],
            "additionalProperties": false
        },
        "uuid": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
        },
        "phone": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "description": "Dictionary: PHONE_TYPE"
                },
                "number": {
                    "type": "string",
                    "pattern": "^\\+38[0-9]{10}$"
                }
            },
            "required": [
                "type",
                "number"
            ],
            "additionalProperties": false
        },
        "range": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^([0-9]|0[0-9]|1[0-9]|2[0-3])\\.[0-5][0-9]$"
            },
            "minItems": 2,
            "maxItems": 2
        }
    },
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "$ref": "#/definitions/uuid",
            "description": "contract_request ID"
        },
        "previous_request": {
            "type": [
                "string",
                "null"
            ]
        },
        "contractor_legal_entity": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "$ref": "#/definitions/uuid",
                    "description": "legal entity ID which make contract request"
                },
                "name": {
                    "type": "string",
                    "$ref": "#/definitions/name",
                    "description": "full official name of legal entity also the name to show on public sources [as map, portal etc]"
                },
                "edrpou": {
                    "type": "string",
                    "pattern": "^[0-9]{8,10}$",
                    "description": "Unified Register of Businesses and Organizations"
                },
                "addresses": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/address",
                        "description": "The max items of array is 2: REGISTRATION - required, RESIDENCE - optional. DIVISION is exception: REGISTRATION - optional, RESIDENCE - required"
                    },
                    "minItems": 1,
                    "description": "address array"
                }
            },
            "required": [
                "id",
                "name",
                "edrpou",
                "addresses"
            ],
            "additionalProperties": false
        },
        "contractor_owner": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "$ref": "#/definitions/uuid"
                },
                "party": {
                    "type": "object",
                    "properties": {
                        "first_name": {
                            "type": "string",
                            "$ref": "#/definitions/person_name"
                        },
                        "last_name": {
                            "type": "string",
                            "$ref": "#/definitions/person_name"
                        },
                        "second_name": {
                            "type": "string",
                            "$ref": "#/definitions/person_name"
                        }
                    },
                    "required": [
                        "first_name",
                        "last_name"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "id",
                "party"
            ],
            "additionalProperties": false
        },
        "contractor_base": {
            "type": "string",
            "description": "documents which allows to represent clinic"
        },
        "contractor_payment_details": {
            "type": "object",
            "properties": {
                "bank_name": {
                    "type": "string",
                    "description": "bank name"
                },
                "MFO": {
                    "type": "string",
                    "description": "bank code"
                },
                "payer_account": {
                    "type": "string",
                    "description": "Номер банківського рахунку"
                }
            },
            "required": [
                "bank_name",
                "MFO",
                "payer_account"
            ],
            "additionalProperties": false
        },
        "contractor_rmsp_amount": {
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true,
            "description": "the amount of population which were served by this MSP"
        },
        "contractor_divisions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "$ref": "#/definitions/uuid",
                        "description": "division ID"
                    },
                    "name": {
                        "type": "string",
                        "$ref": "#/definitions/name",
                        "description": "the full name of division"
                    },
                    "addresses": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/address",
                            "description": "The max items of array is 2: REGISTRATION - required, RESIDENCE - optional. DIVISION is exception: REGISTRATION - optional, RESIDENCE - required"
                        },
                        "minItems": 1,
                        "description": "address array"
                    },
                    "phones": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/phone"
                        },
                        "minItems": 1
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "description": "division's email"
                    },
                    "working_hours": {
                        "type": [
                            "object",
                            "null"
                        ],
                        "properties": {
                            "mon": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/range"
                                },
                                "minItems": 1
                            },
                            "tue": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/range"
                                },
                                "minItems": 1
                            },
                            "wed": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/range"
                                },
                                "minItems": 1
                            },
                            "thu": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/range"
                                },
                                "minItems": 1
                            },
                            "fri": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/range"
                                },
                                "minItems": 1
                            },
                            "sat": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/range"
                                },
                                "minItems": 1
                            },
                            "sun": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/range"
                                },
                                "minItems": 1
                            }
                        },
                        "additionalProperties": false
                    },
                    "mountain_group": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "id",
                    "name",
                    "addresses",
                    "phones",
                    "email",
                    "working_hours"
                ],
                "additionalProperties": false
            }
        },
        "contractor_employee_divisions": {
            "type": [
                "array",
                "null"
            ],
            "items": {
                "type": "object",
                "properties": {
                    "employee": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string",
                                "$ref": "#/definitions/uuid"
                            },
                            "party": {
                                "type": "object",
                                "properties": {
                                    "first_name": {
                                        "type": "string",
                                        "$ref": "#/definitions/person_name"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "$ref": "#/definitions/person_name"
                                    },
                                    "second_name": {
                                        "type": "string",
                                        "$ref": "#/definitions/person_name"
                                    }
                                },
                                "required": [
                                    "first_name",
                                    "last_name"
                                ],
                                "additionalProperties": false
                            },
                            "speciality": {
                                "type": "object",
                                "properties": {
                                    "speciality": {
                                        "type": "string",
                                        "description": "`Dictionary SPECIALITY_TYPE`"
                                    },
                                    "speciality_officio": {
                                        "type": "boolean",
                                        "description": "speciality by position, one and only one should be true"
                                    },
                                    "level": {
                                        "type": "string",
                                        "description": "`Dictionary SPECIALITY_LEVEL`"
                                    },
                                    "qualification_type": {
                                        "type": "string",
                                        "description": "`Dictionary SPEC_QUALIFICATION_TYPE`"
                                    },
                                    "attestation_name": {
                                        "type": "string",
                                        "description": "орган що видав"
                                    },
                                    "attestation_date": {
                                        "type": "string",
                                        "description": "02-28 (string, required) - дата отримання"
                                    },
                                    "valid_to_date": {
                                        "type": "string",
                                        "description": "02-28 (string, required) - дата дії до"
                                    },
                                    "certificate_number": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "speciality",
                                    "speciality_officio",
                                    "level",
                                    "qualification_type",
                                    "attestation_name",
                                    "attestation_date",
                                    "valid_to_date",
                                    "certificate_number"
                                ],
                                "additionalProperties": false
                            }
                        },
                        "required": [
                            "id",
                            "party",
                            "speciality"
                        ],
                        "additionalProperties": false
                    },
                    "staff_units": {
                        "type": "number"
                    },
                    "declaration_limit": {
                        "type": "number",
                        "description": "declaration limit for current employee within the contract"
                    },
                    "division_id": {
                        "type": "string",
                        "$ref": "#/definitions/uuid",
                        "description": "division ID"
                    }
                },
                "required": [
                    "employee",
                    "staff_units",
                    "declaration_limit",
                    "division_id"
                ],
                "additionalProperties": false
            }
        },
        "external_contractor_flag": {
            "type": "boolean",
            "description": "the existence of second appendix"
        },
        "external_contractors": {
            "type": "array",
            "items": {
                "legal_entity": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "$ref": "#/definitions/uuid"
                        },
                        "name": {
                            "type": "string",
                            "$ref": "#/definitions/name"
                        }
                    },
                    "required": [
                        "id",
                        "name"
                    ],
                    "additionalProperties": false
                },
                "contract": {
                    "type": "object",
                    "properties": {
                        "number": {
                            "type": "string",
                            "description": "number of contract with sub contractor"
                        },
                        "issued_at": {
                            "type": "string",
                            "description": "issue date of contract with sub contractor"
                        },
                        "expires_at": {
                            "type": "string",
                            "description": "expiry date of contract with sub contractor"
                        }
                    },
                    "required": [
                        "number",
                        "issued_at",
                        "expires_at"
                    ],
                    "additionalProperties": false
                },
                "divisions": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string",
                                "$ref": "#/definitions/uuid"
                            },
                            "name": {
                                "type": "string",
                                "$ref": "#/definitions/name",
                                "description": "the full name of division"
                            },
                            "medical_service": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "id",
                            "name",
                            "medical_service"
                        ],
                        "additionalProperties": false
                    }
                }
            },
            "required": [
                "contract",
                "divisions"
            ],
            "additionalProperties": false
        },
        "id_form": {
            "type": "string",
            "description": "type of contract - Dictionary: CONTRACT_TYPE"
        },
        "nhs_signer_base": {
            "type": [
                "string",
                "null"
            ],
            "description": "documents which allows to represent nhs"
        },
        "nhs_contract_price": {
            "type": [
                "number",
                "null"
            ],
            "description": "contract price"
        },
        "nhs_payment_method": {
            "type": [
                "string",
                "null"
            ],
            "description": "payment method for contract Dictionary: CONTRACT_PAYMENT_METHOD"
        },
        "status": {
            "type": "string",
            "description": "contract_request status"
        },
        "status_reason": {
            "type": [
                "string",
                "null"
            ],
            "description": "reason of status theat is setted bu nhs"
        },
        "nhs_signer": {
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "$ref": "#/definitions/uuid"
                },
                "party": {
                    "type": "object",
                    "properties": {
                        "first_name": {
                            "type": "string",
                            "$ref": "#/definitions/person_name"
                        },
                        "last_name": {
                            "type": "string",
                            "$ref": "#/definitions/person_name"
                        },
                        "second_name": {
                            "type": "string",
                            "$ref": "#/definitions/person_name"
                        }
                    },
                    "required": [
                        "first_name",
                        "last_name"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "id",
                "party"
            ],
            "additionalProperties": false
        },
        "nhs_legal_entity": {
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "$ref": "#/definitions/uuid",
                    "description": "legal entity ID which make contract request"
                },
                "name": {
                    "type": "string",
                    "$ref": "#/definitions/name",
                    "description": "full official name of legal entity also the name to show on public sources [as map, portal etc]"
                },
                "edrpou": {
                    "type": "string",
                    "description": "Unified Register of Businesses and Organizations"
                },
                "addresses": {
                    "type": "array",
                    "description": "The max items of array is 2: REGISTRATION - required, RESIDENCE - optional. DIVISION is exception: REGISTRATION - optional, RESIDENCE - required"
                }
            },
            "required": [
                "id",
                "name",
                "edrpou",
                "addresses"
            ],
            "additionalProperties": false
        },
        "issue_city": {
            "type": [
                "string",
                "null"
            ],
            "description": "place of contract request"
        },
        "contract_number": {
            "type": [
                "string",
                "null"
            ],
            "description": "human readable number of contract request."
        },
        "contract_id": {
            "type": [
                "string",
                "null"
            ],
            "$ref": "#/definitions/uuid",
            "description": "contract id"
        },
        "start_date": {
            "type": "string",
            "description": "contract start date"
        },
        "end_date": {
            "type": "string",
            "description": "contract end date"
        },
        "printout_content": {
            "type": [
                "string",
                "null"
            ],
            "description": "HTML document for contract request, is shown only for requests in APPROVED or SIGNED status"
        },
        "parent_contract_id": {
            "type": [
                "string",
                "null"
            ]
        }
    },
    "required": [
        "id",
        "contractor_legal_entity",
        "contractor_owner",
        "contractor_base",
        "contractor_payment_details",
        "contractor_rmsp_amount",
        "contractor_divisions",
        "contractor_employee_divisions",
        "start_date",
        "end_date",
        "id_form",
        "status"
    ],
    "additionalProperties": false
}
